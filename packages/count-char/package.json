{
  "name": "@cehrman/count-char",
  "version": "0.0.2",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js"
  },
  "scripts": {
    "prepare": "pnpm run build",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "test": "xo && vitest run",
    "bench": "vitest bench",
