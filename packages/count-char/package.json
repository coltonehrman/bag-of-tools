    "bench:compare": "vitest bench --compare=./test/__benchmarks__/baseline.json --watch=false"
  },
  "devDependencies": {
    "@cehrman/tsconfig": "workspace:^",
    "@faker-js/faker": "^8.4.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  }
}
